<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertAddedFreeGiftMessageActionGroup">
        <arguments>
            <argument name="product"/>
        </arguments>
        <see selector="{{StorefrontProductPageSection.successMsg}}"
             userInput="Free gift {{product}} was added to your shopping cart" stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
