<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminAssertFreeGiftProdOptionSkuAddedActionGroup">
        <arguments>
            <argument name="product"/>
            <argument name="optionSku"/>
        </arguments>
        <seeElement selector="{{AdminOrderInfoSection.ProdInOrderSku(product, optionSku)}}"
                    stepKey="assertFreeGiftOptionSku"/>
    </actionGroup>
</actionGroups>
